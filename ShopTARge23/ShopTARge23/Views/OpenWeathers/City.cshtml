@model ShopTARge23.Core.Dto.WeatherDtos.OpenWeatherDtos.OpenLocationWeatherResultDto

<div class="container">
    <h2>Forecast for the selected city</h2>
    <h2>@Html.DisplayFor(model => model.CityName)</h2>
    <hr />
    <dl class="row text-dark">
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">City:</label>
            <div class="col-sm-10">
                <span class="fw-bold">@Html.DisplayFor(model => model.CityName)</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">Temperature:</label>
            <div class="col-sm-2 text-start">
                <span class="fw-bold">@Html.DisplayFor(model => model.Main.Temp) °C</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">Temp Feels like:</label>
            <div class="col-sm-2">
                <span class="fw-bold">@Html.DisplayFor(model => model.Main.Feels_Like) °C</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">Humidity:</label>
            <div class="col-auto">
                <span class="fw-bold">@Html.DisplayFor(model => model.Main.Humidity) %</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">Pressure:</label>
            <div class="col-sm-10">
                <span class="fw-bold">@Html.DisplayFor(model => model.Main.Pressure) Hpa</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start">Wind Speed:</label>
            <div class="col-sm-10">
                <span class="fw-bold">@Html.DisplayFor(model => model.Wind.Speed) Km/h</span>
            </div>
        </div>
        <div class="form-group row align-items-center mb-2">
            <label class="col-sm-2 col-form-label text-start" style="white-space: nowrap">Weather Condition:</label>
            <div class="col-sm-10">
                <span class="fw-bold">@Html.DisplayFor(model => model.Weather[0].Description)</span>
            </div>
        </div>
    </dl>
</div>

<div class="container">
    <form method="get">
        <button asp-controller="openWeathers" asp-action="Index" class="btn btn-success">Index</button>
    </form>
</div>
